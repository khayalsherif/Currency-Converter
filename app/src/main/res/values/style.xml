<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="NumberButtonStyle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginVertical" tools:ignore="NewApi">8dp</item>
    </style>


    <style name="EditTextStyle">
        <item name="android:gravity">end|center_vertical</item>
        <item name="android:paddingVertical" tools:targetApi="o">@dimen/value_8</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/shape_12_stoke_gray</item>
        <item name="android:backgroundTint">@color/gray</item>
        <item name="android:paddingEnd">@dimen/value_16</item>
        <item name="android:inputType">number</item>
        <item name="android:includeFontPadding">true</item>
    </style>
</resources>